# LLM Bootstrapping Environment Configuration
# Copy this file to .env and fill in your values

# ========== API Keys (Example - For future LLM integrations) ==========
# OPENAI_API_KEY=sk-your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# GOOGLE_API_KEY=your-google-api-key-here

# ========== Application Settings ==========
# APP_ENV=development  # development, testing, production
# APP_DEBUG=true

# ========== Logging ==========
# LOG_LEVEL=DEBUG
# LOG_FILE=llm_bootstrap.log
# LOG_MAX_SIZE=10485760  # 10MB in bytes
# LOG_BACKUP_COUNT=5

# ========== Greeting Defaults ==========
# DEFAULT_NAME=LLM_User
# DEFAULT_TIMES=3
# GREETING_TEMPLATE=casual

# ========== Feature Flags ==========
# ENABLE_ADVANCED_ANALYSIS=true
# ENABLE_EXPORT=false
# ENABLE_COLOR_OUTPUT=true

# ========== External Services ==========
# MODEL_PROVIDER=openai  # openai, anthropic, local
# DEFAULT_MODEL=gpt-3.5-turbo
# MAX_TOKENS=4096
# TEMPERATURE=0.7

# ========== Paths ==========
# CONFIG_PATH=configs/config.yaml
# DATA_DIR=data
# OUTPUT_DIR=outputs
# LOGS_DIR=logs

# ========== Security ==========
# ENABLE_AUTH=false
# API_TIMEOUT=30
# MAX_RETRIES=3

# ========== Performance ==========
# WORKER_THREADS=4
# CACHE_ENABLED=true
# CACHE_TTL=3600  # 1 hour in seconds

LOG_LEVEL=DEBUG
DEFAULT_NAME=MyName
DEFAULT_TIMES=3
